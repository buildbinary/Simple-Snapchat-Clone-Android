<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.fredrikbogg.snapchatclone">

    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.ShowRetrievedSnapsActivity"
            android:label="Snaps"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.ShowSnapActivity"
            android:label="Snap"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.SendSnapActivity"
            android:label="Send To"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.CameraCapturedActivity"
            android:label="Photo"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.CameraActivity"
            android:label="Camera"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>